<!DOCTYPE html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Gym Finder</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.1.1/normalize.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bungee+Inline|Special+Elite" rel="stylesheet">
    <link rel="stylesheet" href="assets/style.css" type="text/css">
  </head>

  <body>
    <header>
      <div class="header row">
        <div class="title">
          <h1>Gym Finder</h1>
          <p>Start moving, Start living</p>
        </div>
        <img src="https://raw.githubusercontent.com/Redrogue12/gym-finder/master/images/logo.jpg" class="logo" alt="Arm Logo">
        <div class="title">
        </div>
      </div>
    </header>

    <div id="container">
      <form action="/search" method="GET">
        <input type="text" id="search" name="search" placeholder="Enter town name or zip code"><br>
        <input type="submit">
      </form>
    </div>

    <div class="container">
      <% data["results"].forEach(function(gym) { %>
      <div class="card">
        <h3><%= gym.name %></h3>
        
        <% if (gym.photos) { %>
          <img src="<%= source %><%= gym.photos[0].photo_reference %><%= api %>" alt="Gym Photo">
        <% } else { %>
          <img src="https://static.thenounproject.com/png/52212-200.png" alt="Gym Photo">
        <% } %>
        
        <p><strong>Rating:</strong> <%= gym.rating %>/5 </p>
        <p><strong>Address:</strong> <%= gym.formatted_address %></p>
        
      </div>
      <% }) %>
    </div>

    <footer id="footer">
      <p>By: Edgar X. González Cortés</p>
      <p>|</p>
      <p>Y00-26-3142</p>
      <p>|</p>
      <p>exgc12@gmail.com</p>
    </footer>

  </body>

</html>